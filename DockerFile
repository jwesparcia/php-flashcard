FROM php:8.2-apache

# 1. system deps + unzip (needed by Composer)
RUN apt-get update && apt-get install -y unzip git && rm -rf /var/lib/apt/lists/*

# 2. install Composer
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

# 3. copy only composer files first (Docker layer caching)
WORKDIR /var/www/html
COPY composer.json composer.lock ./

# 4. install PHP packages
RUN composer install --no-dev --optimize-autoloader --no-scripts

# 5. copy the rest of your project
COPY . .

# 6. permissions
RUN chown -R www-data:www-data /var/www/html

# 7. 403 fix: allow access to /
RUN sed -i '/<Directory \/>/,/<\/Directory>/ s/Require all denied/Require all granted/' \
    /etc/apache2/apache2.conf

# 403 fix #2 â€“ allow /var/www (the one that is actually biting you)
RUN sed -i '/<Directory \/var\/www\/>/,/<\/Directory>/ s/Require all denied/Require all granted/' \
    /etc/apache2/apache2.conf